<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permite acceso a archivos en el directorio cache de la app -->
    <cache-path name="images" path="." />

    <!-- Permite acceso a archivos en el directorio interno de la app -->
    <files-path name="files" path="." />

    <!-- Permite acceso a archivos en el directorio de fotos externo -->
    <external-files-path name="external_files" path="Pictures" />

    <!-- Permite acceso a archivos en el cache externo -->
    <external-cache-path name="external_cache" path="." />
</paths>